{
  "general": {
    "output_dir": "output",
    "temp_dir": "output/temp",
    "log_level": "INFO",
    "max_concurrent_tasks": 4,
    "api_timeout": 600,
    "supported_languages": [
      "zh",
      "en",
      "es"
    ],
    "default_language": "zh"
  },
  "llm": {
    "script_generation": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 0.8,
      "max_tokens": 3000,
      "api_base": "${OPENROUTER_API_BASE:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "theme_extraction": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 1.0,
      "max_tokens": 512,
      "api_base": "${OPENROUTER_API_BASE:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "scene_splitting": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 0.8,
      "max_tokens": 8192,
      "api_base": "${OPENROUTER_API_BASE:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "image_prompt_generation": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 1.0,
      "max_tokens": 16384,
      "api_base": "${OPENROUTER_API_BASE:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "character_analysis": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 0.8,
      "max_tokens": 8192,
      "api_base": "${OPENROUTER_API_BASE:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    }
  },
  "media": {
    "enable_integrated_generation": true,
    "max_retries": 5,
    "retry_delays": [10, 20, 30, 60, 120],
    "retry_keywords": ["timeout", "connection", "network", "temporary", "running", "server", "failed"],
    "image": {
      "resolution": "1024x768",
      "quality": "high",
      "style": "ancient_horror",
      "ddim_steps": 40,
      "model_id": 8,
      "primary_provider": "runninghub",
      "fallback_providers": [
        "openai",
        "stability"
      ]
    },
    "audio": {
      "voice_id": "7468512265134932019",
      "voice_speed": 2.0,
      "voice_volume": 1.0,
      "background_music_volume": 0.3,
      "opening_sound_duration": 4884897,
      "primary_provider": "minimax",
      "fallback_providers": [
        "elevenlabs",
        "azure"
      ]
    }
  },
  "video": {
    "resolution": "720x1280",
    "fps": 30,
    "format": "mp4",
    "enable_subtitles": true,
    "enable_keyframes": true,
    "animation_strategy": "image_to_video",
    "image_to_video": {
      "enabled": true,
      "provider": "runninghub",
      "workflow_id": "1958006911062913026",
      "fps": 31,
      "positive_prompt_node_id": "10",
      "wan_i2v_node_id": "5",
      "load_image_node_id": "4"
    }
  },
  "subtitle": {
    "max_line_length": 18,
    "split_priority": [
      "。",
      "！",
      "？",
      "，",
      ",",
      "：",
      ":",
      "、",
      "；",
      ";",
      " "
