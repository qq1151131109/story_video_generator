    "main_font_size": 7,
    "title_font_size": 40,
    "main_color": "#FFFFFF",
    "main_border_color": "#000000",
    "title_color": "#000000",
    "title_border_color": "#ffffff",
    "title_font": "书南体",
    "title_letter_spacing": 26
  },
  "animation": {
    "scene_scale_range": [
      1.0,
      1.5
    ],
    "character_scale_sequence": [
      2.0,
