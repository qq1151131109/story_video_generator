{
  "general": {
    "output_dir": "output",
    "temp_dir": "output/temp",
    "log_level": "INFO",
    "max_concurrent_tasks": 3,
    "supported_languages": [
      "zh",
      "en",
      "es"
    ],
    "default_language": "zh",
    "api_timeout": 120,
    "api_max_retries": 3,
    "retry_delay": 2
  },
  "llm": {
    "script_generation": {
      "model": "openai/gpt-5",
      "temperature": 0.8,
      "max_tokens": 1024,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "theme_extraction": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 1.0,
      "max_tokens": 512,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "scene_splitting": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 0.8,
      "max_tokens": 8192,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "image_prompt_generation": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 1.0,
      "max_tokens": 16384,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "character_analysis": {
      "model": "deepseek/deepseek-chat-v3.1",
      "temperature": 0.8,
      "max_tokens": 8192,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    }
  },
  "media": {
    "image": {
      "resolution": "832x1216",
      "quality": "high",
      "style": "ancient_horror",
      "ddim_steps": 40,
      "model_id": 8,
      "primary_provider": "runninghub",
      "fallback_providers": ["openai"],
      "runninghub": {
        "workflow_id": "1958005140101935106",
        "prompt_node_id": "39",
        "resolution_node_id": "5",
        "supports_custom_resolution": true,
        "notes": "已配置正确的节点ID，支持1024x1024自定义分辨率"
      }
    },
    "audio": {
      "voice_id": "21m00Tcm4TlvDq8ikWAM",
      "voice_speed": 1.2,
      "voice_volume": 1.0,
      "background_music_volume": 0.3,
      "primary_provider": "minimax",
      "fallback_providers": ["minimax"],
      "minimax_voice": "male-qn-qingse"
    }
  },
  "video": {
    "resolution": "720x1280",
    "fps": 30,
    "format": "mp4",
    "enable_subtitles": true,
    "enable_keyframes": true
  },
  "subtitle": {
    "video_width": 720,
    "video_height": 1280,
    "safe_margin": 40,
    "max_text_width": 580,
    "font_size": 48,
    "max_lines": 2,
    "max_chars_per_line": 10,
    "enable_pixel_validation": true,
    "force_split_threshold": 15,
    "smart_punctuation_split": true,
    "split_priority": [
      "。",
      "！",
      "？",
      "，",
      ",",
      "：",
      ":",
      "、",
      "；",
      ";",
      " "
    ],
    "main_font_size": 48,
    "title_font_size": 40,
    "main_color": "#FFFFFF",
    "main_border_color": "#000000",
    "title_color": "#000000",
    "title_border_color": "#ffffff",
    "margin_v": 140,
    "outline": 3,
    "alignment": 2
  },
  "whisperx": {
    "model_size": "large-v3",
    "batch_size": 16,
    "compute_type": "float16",
    "device": "auto",
    "return_char_alignments": false,
    "print_progress": true,
    "language": "zh",
    "enable_vad_filter": true,
    "vad_threshold": 0.35,
    "max_new_tokens": 128,
    "enabled": false
  },
  "animation": {
    "scene_scale_range": [1.0, 1.15],
    "allowed_modes": ["center_zoom_in", "move_left", "center_zoom_out", "move_right", "move_up", "move_down"],
    "character_scale_sequence": [
      2.0,
      1.2,
      1.0
    ],
    "character_scale_timing": [
      0,
      533333
    ],
    "easing": "linear"
  },
  "cache": {
    "enabled": true,
    "ttl_hours": 24,
    "max_size_mb": 1024
  }
}