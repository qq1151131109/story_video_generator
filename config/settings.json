{
  "general": {
    "output_dir": "output",
    "temp_dir": "output/temp",
    "log_level": "INFO",
    "max_concurrent_tasks": 5,
    "supported_languages": [
      "zh",
      "en",
      "es"
    ],
    "default_language": "zh",
    "api_timeout": 30,
    "api_max_retries": 3,
    "retry_delay": 2
  },
  "llm": {
    "script_generation": {
      "model": "google/gemini-2.5-flash",
      "fallback_model": "openai/gpt-5",
      "temperature": 0.8,
      "max_tokens": 1024,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "theme_extraction": {
      "model": "google/gemini-2.5-flash",
      "fallback_model": "openai/gpt-5",
      "temperature": 1.0,
      "max_tokens": 512,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "scene_splitting": {
      "model": "google/gemini-2.5-flash",
      "fallback_model": "openai/gpt-5",
      "temperature": 0.8,
      "max_tokens": 8192,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "image_prompt_generation": {
      "model": "google/gemini-2.5-flash",
      "fallback_model": "openai/gpt-5",
      "temperature": 1.0,
      "max_tokens": 16384,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    },
    "character_analysis": {
      "model": "google/gemini-2.5-flash",
      "fallback_model": "openai/gpt-5",
      "temperature": 0.8,
      "max_tokens": 8192,
      "api_base": "${OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}",
      "api_key": "${OPENROUTER_API_KEY}"
    }
  },
  "media": {
    "enable_integrated_generation": true,
    "integrated_workflow_id": "1964265917020520450",
    "allow_fallback_on_network_error": true,
    "text_to_video": {
      "provider": "runninghub",
      "workflow_id": "1964265917020520450",
      "resolution": "720x1280",
      "fps": 31,
      "duration": 3.0,
      "quality": "high",
      "style": "ancient_horror",
      "notes": "一体化文生图+图生视频工作流，直接从文本生成视频"
    },
    "image": {
      "primary_provider": "runninghub",
      "resolution": "832x1216",
      "quality": "high",
      "style": "ancient_horror",
      "notes": "降级时使用的传统图像生成配置"
    },
    "audio": {
      "voice_id": "21m00Tcm4TlvDq8ikWAM",
      "voice_speed": 1.2,
      "voice_volume": 1.0,
      "background_music_volume": 0.3,
      "primary_provider": "minimax",
      "minimax_voice": "male-qn-qingse"
    }
  },
  "video": {
    "resolution": "720x1280",
    "fps": 31,
    "format": "mp4",
    "enable_subtitles": true,
    "enable_keyframes": true,
    "animation_strategy": "integrated_text_to_video",
    "notes": "使用一体化文生视频工作流，无需分离的图像生成和图生视频步骤"
  },
  "subtitle": {
    "video_width": 720,
    "video_height": 1280,
    "safe_margin": 40,
    "max_text_width": 580,
    "font_size": 48,
    "max_lines": 2,
    "max_chars_per_line": 10,
    "enable_pixel_validation": true,
    "force_split_threshold": 15,
    "smart_punctuation_split": true,
    "split_priority": [
      "。",
      "！",
      "？",
      "，",
      ",",
      "：",
      ":",
      "、",
      "；",
      ";",
      " "
    ],
    "main_font_size": 48,
    "title_font_size": 40,
    "main_color": "#FFFFFF",
    "main_border_color": "#000000",
    "title_color": "#000000",
    "title_border_color": "#ffffff",
    "margin_v": 140,
    "outline": 3,
    "alignment": 2
  },
  "whisperx": {
    "model_size": "large-v3",
    "batch_size": 16,
    "compute_type": "float16",
    "device": "auto",
    "return_char_alignments": false,
    "print_progress": true,
    "language": "auto",
    "enable_vad_filter": true,
    "vad_threshold": 0.35,
    "max_new_tokens": 128,
    "enabled": true,
    "prefer_whisperx": true
  },
  "animation": {
    "scene_scale_range": [1.0, 1.15],
    "allowed_modes": ["center_zoom_in", "move_left", "center_zoom_out", "move_right", "move_up", "move_down"],
    "character_scale_sequence": [
      2.0,
      1.2,
      1.0
    ],
    "character_scale_timing": [
      0,
      533333
    ],
    "easing": "linear"
  },
  "cache": {
    "enabled": true,
    "ttl_hours": 24,
    "max_size_mb": 1024
  }
}